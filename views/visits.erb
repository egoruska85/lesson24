<h2 align="center" ><i>Запись на сеанс к стилисту</i></h2><br/>


<form action="/visits" method="POST" align="center">
  <div class="form-group">
    <label>Ваше имя</label>
    <input name="username" type="text" class="form-control" placeholder="Введите Ваше имя" value="<%= @username %>">
</div>

<div class="form-group">
  <label>Номер телефона</label>
  <input name="phone" type="text" class="form-control" placeholder="Введите Ваш телефон" value="<%= @phone %>">
</div>
<div class="">
  <label>Мастер</label>
  <select  name="master" class="form-control" id="exampleFormControlSelect1" value="<%= @master %>">
     <option>Елена</option>
     <option>Стас</option>
     <option>Сергей</option>
     <option>Ева</option>
     <option>Изабелла</option>
   </select>
</div>
<div class="form-group">
  <label>Выберите цвет волос:</label>
  <select name="color" id="colorpicker" value="<%= @color %>">
    <option value="#7bd148">Green</option>
    <option value="#5484ed">Bold blue</option>
    <option value="#a4bdfc">Blue</option>
    <option value="#46d6db">Turquoise</option>
    <option value="#7ae7bf">Light green</option>
    <option value="#51b749">Bold green</option>
    <option value="#fbd75b">Yellow</option>
    <option value="#ffb878">Orange</option>
    <option value="#ff887c">Red</option>
    <option value="#dc2127">Bold red</option>
    <option value="#dbadff">Purple</option>
    <option value="#e1e1e1">Gray</option>
  </select>
</div>



<div class="form-group">
  <label>Дата</label>
  <input name="date" type="date" class="form-control" value="<%= @date %>">
</div>
<div class="form-group">
  <label>Время</label>
  <input name="time" type="time" class="form-control" value="<%= @time %>">
</div>

  <button type="submit" class="btn btn-outline-primary">ЗАПИСАТЬСЯ </button>
</form>
<script type="text/javascript">
$(function(){

  $('#colorpicker').simplecolorpicker();
